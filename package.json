{
  "name": "beerhiker",
  "version": "1.0.0",
  "description": "BeerHiker",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "install": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.8.10",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^12.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewemichael/BeerHiker.git"
  },
  "bugs": {
    "url": "https://github.com/matthewemichael/BeerHiker/issues"
  },
  "homepage": "https://github.com/matthewemichael/BeerHiker#readme"
}
